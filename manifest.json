{
  "manifest_version": 2,

  "name": "Procrastination Timer",
  "description": "Chrome Extension to increase productivity",
  "version": "1.0",

  "browser_action":  {
  "default_icon": "img/timer.png",
  "default_popup": "popup.html",
  "default_title": "Procrastination Timer"
  },


  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },


  "permissions": ["tabs", "activeTab", "storage", "background"]
}